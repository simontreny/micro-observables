{
  "name": "micro-observables",
  "version": "2.0.0-alpha5",
  "description": "A simple Observable library that can be used for easy state management in React applications.",
  "author": "BeTomorrow",
  "license": "MIT",
  "keywords": [
    "observable",
    "typescript",
    "react",
    "state",
    "hook"
  ],
  "files": [
    "*"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "prepublishOnly": "if [[ ! $PWD =~ dist$ ]]; then echo 'Use `npm run dist` instead' && exit 1; fi",
    "dist": "npm run build && npm run test && cp package.json README.md dist && cd dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeTomorrow/micro-observables.git"
  },
  "homepage": "https://github.com/BeTomorrow/micro-observables#readme",
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-native": "^0.66.8",
    "jest": "^27.4.3",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-query": "^3.34.0",
    "redux": "^4.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.2"
  }
}
